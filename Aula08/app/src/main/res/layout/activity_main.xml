<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Iniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/botaoIniciar"
            android:onClick="iniciarTask"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="200dp"
            tools:layout_editor_absoluteX="106dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" tools:layout_editor_absoluteX="170dp"
            android:visibility="invisible"
            tools:visibility="visible" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/botaoIniciar" android:max="10" android:progress="0"/>
</androidx.constraintlayout.widget.ConstraintLayout>