<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nome"
            tools:layout_editor_absoluteX="81dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:minHeight="48dp" android:hint="nome"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nacionalidade"
            tools:layout_editor_absoluteX="75dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nome" android:minHeight="48dp" android:hint="nacionalidade"/>
    <Button
            android:text="Gravar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/gravar"
            tools:layout_editor_absoluteX="123dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/nacionalidade"/>
    <Button
            android:text="Limpar campos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/limpar"
            tools:layout_editor_absoluteX="133dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/gravar"/>
    <Button
            android:text="Recuperar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/recuperar"
            tools:layout_editor_absoluteX="125dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/limpar"/>
    <Button
            android:text="Deletar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/deletar"
            tools:layout_editor_absoluteX="120dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recuperar"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/mostraDados"
            tools:layout_editor_absoluteX="153dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/deletar" android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>