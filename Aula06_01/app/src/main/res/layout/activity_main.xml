<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/distancia"
            tools:layout_editor_absoluteX="82dp" android:hint="distancia" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:minHeight="48dp"/>
    <Button
            android:text="Calcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/calcular"
            tools:layout_editor_absoluteX="130dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/distancia"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/resultado1"
            tools:layout_editor_absoluteX="145dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/calcular" android:gravity="center"
            android:hint="Corrida Bandeira 1"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/resultado2"
            tools:layout_editor_absoluteX="178dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/resultado1" android:hint="Corrida bandeira 2"
            android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>