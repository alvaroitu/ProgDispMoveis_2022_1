<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2">

    <TextView
            android:gravity="center"
            android:text="TELA02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tela2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
    />
    <Button
            android:text="Voltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/botaoVoltar"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="56dp"/>
    <Button
            android:text="Mostrar nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/mostraNome"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/tela2"
            tools:layout_editor_absoluteX="0dp"/>
    <TextView
            android:gravity="center"
            android:hint="Nome vai aparecer aqui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/nomeRecebido"
            tools:layout_editor_absoluteX="131dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/mostraNome"/>
    <Button
            android:text="Navegador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/botaoNavegador"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/botaoVoltar"/>
    <Button
            android:text="enviarEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/botaoEnviarEmail"
            tools:layout_editor_absoluteX="158dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/nomeRecebido"/>
</androidx.constraintlayout.widget.ConstraintLayout>