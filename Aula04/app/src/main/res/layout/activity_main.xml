<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:gravity="center"
            android:text="TELA 01"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:id="@+id/tela1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            tools:layout_editor_absoluteX="119dp"/>
    <Button
            android:text="Enviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/botaoEnviar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="64dp"
            tools:layout_editor_absoluteX="172dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Entre com texto"
            android:ems="10"
            android:id="@+id/entrada"
            tools:layout_editor_absoluteX="0dp" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/tela1"/>
    <Button
            android:text="Salvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/botaoSalvar"
            tools:layout_editor_absoluteX="0dp" android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/entrada"/>
</androidx.constraintlayout.widget.ConstraintLayout>